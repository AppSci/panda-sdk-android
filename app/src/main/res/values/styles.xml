<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@android:color/white</item>

    </style>

    <style name="AppTheme.TranslucentStatus">
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="GetScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/SubscriptionAnimations</item>
    </style>

    <style name="SubscriptionAnimations" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/stay</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_bottom</item>
    </style>

    <style name="PandaTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/SubscriptionAnimations</item>
    </style>

</resources>
